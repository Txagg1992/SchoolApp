<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="12dp"
    android:id="@+id/card_view"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F6DE">
        <TextView
            android:id="@+id/text_view_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="School Name"
            android:textSize="@dimen/card_name_text_size"
            android:textColor="@color/card_text_color"/>
        <TextView
            android:id="@+id/text_view_school_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="School Address"
            android:textSize="@dimen/card_address_text_size"
            android:textColor="@color/card_text_color"
            android:layout_below="@+id/text_view_school_name"/>
        <TextView
            android:id="@+id/text_view_school_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="City,"
            android:textSize="@dimen/card_address_text_size"
            android:textColor="@color/card_text_color"
            android:layout_below="@+id/text_view_school_address"/>
        <TextView
            android:id="@+id/text_view_school_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="State"
            android:textSize="@dimen/card_address_text_size"
            android:textColor="@color/card_text_color"
            android:layout_toEndOf="@+id/text_view_school_city"
            android:layout_below="@+id/text_view_school_address"/>
        <TextView
            android:id="@+id/text_view_school_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="90210"
            android:textSize="@dimen/card_address_text_size"
            android:textColor="@color/card_text_color"
            android:layout_toEndOf="@+id/text_view_school_state"
            android:layout_below="@+id/text_view_school_address"/>

        <RelativeLayout
            android:id="@+id/communication_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_city"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/text_view_school_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="909-555-1212"
                android:textSize="@dimen/card_address_text_size"
                android:textColor="@color/detail_link_color"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/icon_web_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_web_link"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>